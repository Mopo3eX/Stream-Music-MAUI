<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stream_Music_MAUI.Settings"
             Title="Settings">
    <ScrollView>
        <StackLayout>
            <VerticalStackLayout Spacing="5">
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Логин бота" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="350" Placeholder="UserName" x:Name="BotUserName"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Token бота" VerticalOptions="Center" WidthRequest="250"/>
                    <Entry WidthRequest="350" Placeholder="Token" IsPassword="true" x:Name="BotToken"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Имя канала для подключения" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="350" Placeholder="ChannelName" x:Name="ChannelName"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="URL WebSocket OBS" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="350" Placeholder="ws://127.0.0.1:4455" x:Name="ObsWebSocketURL"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Пароль для WebSocket OBS" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="350" Placeholder="Password(оставьте пустым, если WebSocket без авторизации)" x:Name="ObsWebSocketPassword"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Имя поля в OBS текущей музыки" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="350" Placeholder="MusicCurrent" x:Name="GDITextName"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Имя поля в OBS следующей музыки" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="350" Placeholder="MusicNext" x:Name="GDITextNameNext"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Устройство воспроизведения" VerticalOptions="Center" WidthRequest="250"/>
                    <Picker Title="Выберите устройство" WidthRequest="350" x:Name="Devices"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Расположение OBS" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="325" IsReadOnly="true" Placeholder="C:\Program Files\obs-studio\bin\64bit\obs64.exe" x:Name="OBSDir"/>
                    <Button ImageSource="settings.png" WidthRequest="25" HeightRequest="25" Clicked="Button_Clicked"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20,0,0,0">
                    <Label Text="Расположение VTM" VerticalOptions="Center" WidthRequest="250"/>
                    <Editor WidthRequest="325" IsReadOnly="true" Placeholder="C:\VTM\veadotube-mini.exe" x:Name="VTMDir"/>
                    <Button ImageSource="settings.png" WidthRequest="25" HeightRequest="25" Clicked="Button_Clicked_1"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="10" Margin="20">
                    <Button Text="Отмена" BackgroundColor="#9D0000" WidthRequest="300" />
                    <Button Text="Сохранить" BackgroundColor="#00FF00" WidthRequest="300" Clicked="SaveClicked"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>